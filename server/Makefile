SOURCES = $(wildcard *.erl)
TARGETS = $(SOURCES:.erl=.beam)

all: $(TARGETS)

clean:
	rm -f $(TARGETS)

depend:
	@echo 'Make sure to clean up the bottom of the Makefile'
	@echo 'before running `make depend`.'
	# FIXME: Do that automatically.
	erlc -M *.erl >> Makefile

.phony: all clean depend

%.beam: %.erl
	erlc $<

# Everything after this point is autogenerated; do not edit.
# ---- cut here ----
array_2d.beam: array_2d.erl
client_connection.beam: client_connection.erl
info_manager.beam: info_manager.erl map_cell.hrl
main.beam: main.erl map_cell.hrl user_info.hrl
map.beam: map.erl map_cell.hrl
player_control.beam: player_control.erl map_cell.hrl
tag.beam: tag.erl
user_info_manager.beam: user_info_manager.erl user_info.hrl
